upstream _battlesnake-control {
    server unix:/run/uwsgi/app/battlesnake-control/socket;
}

server {
    listen [::]:8080;
    listen 8080;
    server_name cjms.rbrck.com;

    root /var/www/battlesnake2018-control;

    location /static/ {
        autoindex off;
        try_files $uri =444;
    }

    location = /start {
        include uwsgi_params;
        uwsgi_pass _battlesnake-control;
    }

    location = /move {
        include uwsgi_params;
        uwsgi_pass _battlesnake-control;
    }

    location = /end {
        return 200 OK;
    }

    location / {
        return 444;
    }
}
